[Unit]
Description=MetaMind
After=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=/usr/bin/docker kill mm-prod
ExecStartPre=/usr/bin/docker rm mm-prod
ExecStart=/usr/bin/docker run -t --env-file=~/mmscripts/prod.env -p 80:8080 --name=mm-prod mm
ExecStop=/usr/bin/docker stop mm-prod

[Install]
WantedBy=multi-user.target
